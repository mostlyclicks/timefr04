<% content_for :body_content_title do %>
  <%= @group.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @group.name %>
    </p>
  </section>
  <section>
    <h1>Shift Levers</h1>
    <p>
      <%=raw @group.shift_levers %>
    </p>
  </section>
  <section>
    <h1>Brakes</h1>
    <p>
      <%=raw @group.brakes %>
    </p>
  </section>
  <section>
    <h1>Front Derailleur</h1>
    <p>
      <%=raw @group.front_derailleur %>
    </p>
  </section>
  <section>
    <h1>Rear Derailleur</h1>
    <p>
      <%=raw @group.rear_derailleur %>
    </p>
  </section>
  <section>
    <h1>Crankset</h1>
    <p>
      <%=raw @group.crankset %>
    </p>
  </section>
  <section>
    <h1>Cassette</h1>
    <p>
      <%=raw @group.cassette %>
    </p>
  </section>
  <section>
    <h1>Chain</h1>
    <p>
      <%=raw @group.chain %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="groups">
      <% @groups.each do |group| %>
        <li>
          <%= link_to group.name, refinery.groups_group_path(group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
