<%# content_for :body_content_title do %>
  <%#= @bike.name %>
<%# end %>

<style>
  #l2-bike {background-image:url(<%= @bike.hero_background.url %>);}
</style>


<!-- L2 BIKE INTRO -->
<section class="show" id="l2-bike">
  <div class="container">
    <%#= render '/refinery/content_page' %>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-8" id="bike-img">
        <%#= image_fu @bike.hero_image, '1200x765c', class: 'img-responsive' %>
        <%= image_tag @bike.hero_image.url, class: 'img-responsive1' %>
      </div>
      <div class="col-md-4 col-lg-4" id="bike-main-txt">
        <%= image_tag @bike.hero_logo.url, class: 'img-responsive' %>
        <%=raw @bike.hero_description %>
      </div>
    </div>
  </div>
</section>


<!-- L2 BIKE AKTIV -->
<section id="aktiv-choice">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <%#= image_tag 'Skylon-plasma-frame.png', class: 'img-responsive' %>
        <%= image_tag @bike.fork_standard_image.url, class: 'img-responsive' %>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <%#= image_tag 'Skylon-AKTIV-plasma-frame.png', class: 'img-responsive' %>
        <%= image_tag @bike.fork_aktiv_image.url, class: 'img-responsive' %>
      </div>
    </div>
    <div class="row">
    </div>
    <div class="row">
      <div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1">
        <%=raw @bike.fork_standard %>
      </div>
      <div class="col-lg-2 col-md-2 col-sm-2 text-center" id="or">
        <h1>or</h1>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <%=raw @bike.fork_aktiv %>
      </div>
    </div>
  </div>
</section>


<%= render 'shared/what_is_aktiv' %>

<section id="l2-bike-features">


<h1 class="text-center"><%= @bike.name %> Features</h1>

<div class="container">
  <div class="row">
    <% @bike.features.each do |f| %>
      <div class="col-sm-3 text-center bike-feature">
          
          <%= image_tag f.image.url, class: 'img-responsive img-circle' %>
          <h2><%= f.title %></h2>
          <p><%= f.description.html_safe %></p>
      </div>
    <% end %>
  </div>
</div>

</section>






<section id="l2-bike-gallery">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <h1 class="text-center">Gallery</h1>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @bike.colors.each_with_index do |c, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>" style="background-color:#cdcdcd;"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">

            <% @bike.colors.each_with_index do |c, index| %>

            <div class="item <% if index == 0 %>active<% end %>" >
              <%= image_tag c.image.url, alt: c.name, class: 'img-responsive gallery-img' %>
              <div class="carousel-caption">
                <%= c.name %>
              </div>
            </div>
            <% end %>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="fa fa-angle-left fa-2x"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="fa fa-angle-right fa-2x"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>


<section id="l2-geometry">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <%= image_tag 'TIME-2015-geometry.png', class: 'img-responsive center-it' %>
      </div>
      <div class="col-lg-7">
        <h3><%= @bike.name %> Geometry</h3>
        <% if @bike.name == 'Skylon' %>
          <%= render 'shared/skylon_geo_grid' %>
        <% elsif @bike.name == 'Izon' %>
          <%= render 'shared/izon_geo_grid' %>
        <% else %>
          <%= render 'shared/fluidity_geo_grid' %>
        <% end %>
      </div>
    </div>
  </div>
</section>



<section id="groups">
<%# if @bike.name == 'Skylon' %>
  
<%# elsif @bike.name == 'Izon' %>

<%# else %>

<%# end %>

<div class="container">
  <h1 class="text-center">Component Groups</h1>
  <div class="row">
    <% @groups.each do |d| %>
      <div class="col-md-6 group">
        <table class="table table-striped table-bordered table-condensed">
            <col width="30%">
            <col width="70%">
          <tr>
            <th colspan="2"><%= d.name %></th>
          </tr>
          <tr>
            <td>Shift Levers</td>
            <td><%= d.shift_levers %></td>
          </tr>
          <tr>
            <td>Brakes</td>
            <td><%= d.brakes %></td>
          </tr>
          <tr>
            <td>Front Derailleur</td>
            <td><%= d.front_derailleur %></td>
          </tr>
          <tr>
            <td>Rear Derailleur</td>
            <td><%= d.rear_derailleur %></td>
          </tr>
          <tr>
            <td>Crankset</td>
            <td><%= d.crankset %></td>
          </tr>
          <tr>
            <td>Casssette</td>
            <td><%= d.cassette %></td>
          </tr>
          <tr>
            <td>Chain</td>
            <td><%= d.chain %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>

</section>












