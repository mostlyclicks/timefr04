  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bikes">
      <% @bikes.each do |bike| %>
        <li>
          <%= link_to bike.name, refinery.bikes_bike_path(bike) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

