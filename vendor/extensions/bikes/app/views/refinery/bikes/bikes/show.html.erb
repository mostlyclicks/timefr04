    <p>
      <%=raw @bike.name %>
    </p>
  </section>
  <section>
    <h1>Hero Logo</h1>
    <p>
      <%= image_fu @bike.hero_logo, '200x200c' %>
    </p>
  </section>
  <section>
    <h1>Hero Image</h1>
    <p>
      <%= image_fu @bike.hero_image, '200x200c' %>
    </p>
  </section>
  <section>
    <h1>Hero Background</h1>
    <p>
      <%= image_fu @bike.hero_background, '200x200c' %>
    </p>
  </section>
  <section>
    <h1>Hero Description</h1>
    <p>
      <%=raw @bike.hero_description %>
    </p>
  </section>
  <section>
    <h1>Fork Standard</h1>
    <p>
      <%=raw @bike.fork_standard %>
